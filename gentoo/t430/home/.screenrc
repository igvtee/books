# 關閉啟動訊息。
startup_message off

# 加入狀態列。
caption always "%{=u .r} %-w%<%{=ub .Y}%n %t%{=u .r}%+w "
#hardstatus alwaysignore
#hardstatus alwayslastline "%{= .K} [%l]%<%=%{= .Y}$USER%{= .R}@%H %=%{= .m} %Y/%m/%d%{= .M} %0c "

# 將預設編碼設為 UTF-8。
defutf8 on

# 停止閃爍
vbell off

#Create 5 screens on startup
screen -t sh0 0
screen -t sh1 1
screen -t sh2 2
screen -t sh3 3
screen -t sh4 4

# history buffer
defscrollback 5000
