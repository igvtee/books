# 關閉啟動訊息。
startup_message off

# 加入狀態列。
caption always "%{=u .r} %-w%<%{=ub .Y}%n %t%{=u .r}%+w "
#hardstatus alwaysignore
#hardstatus alwayslastline "%{= .K} [%l]%<%=%{= .Y}$USER%{= .R}@%H %=%{= .m} %Y/%m/%d%{= .M} %0c "

# 將預設編碼設為 UTF-8。
defutf8 on

# 停止閃爍
vbell off

#Create 3 screens on startup
screen -t bash 0
screen -t bash 1
screen -t bash 2
screen -t bash 3
screen -t bash 4

# history buffer
defscrollback 5000
